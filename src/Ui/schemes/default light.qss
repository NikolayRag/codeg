* {
	background-color: #eee;
	color: #223;
}

#frameViewport {
	color: #aaa;
}

#widgetToolbar {
	background-color: rgba(255, 255, 255, 192);
}

#listGeoItems {
	gridline-color: rgba(0, 0, 0, 24);
}

#btnMarkAdd {
	background-color: #aaa;
	color: #555;
}


#scrollMarks { background-color: rgba(0,0,0,0); }
#scrollMarks QWidget { background-color: rgba(0,0,0,0); }
#listObjects, #listObjects QWidget { background-color: rgba(0,0,0,0); }


#frameDispatch { background-color: rgba(0,0,0,0); }
#_frameDev, #_labStats { background-color: rgba(0,0,0,32); }

#frameRecover, #frameRecover * { background-color: #ccc; }
#btnDevState-warning { background-color: #f43; }
#labRecover-warning { color: #b31; }
#btnRecoverStop { background-color: #0ff; }


QProgressBar {
	text-align: center;
	border-radius: 2px;
	border: 1px solid #bbb;

	color: rgba(0,0,0,0);
}
QProgressBar::chunk { background-color: #ace; margin: 0; }

#progAll { background-color: rgba(0,0,0,0); border:none}


QScrollBar {
	border: 1px solid #ccc;
	border-radius: 5px;
	width: 12px;
	margin: 2px 0 2px 2px;
}
QScrollBar::handle:disabled {
	background: #ccc;
}
QScrollBar::handle {
	background: #888;
	border-radius: 3px;
	min-height: 30px;
}
QScrollBar::add-line, QScrollBar::sub-line,
QScrollBar::up-arrow, QScrollBar::down-arrow,
QScrollBar::add-page, QScrollBar::sub-page {
	width:0;
	height:0;
}
